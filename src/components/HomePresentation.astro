---
import HomeCard from "./HomeCard.astro";

// Íconos SVG
const carIcon = `
<svg viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
  <path d="M18.92 6.01C18.72 5.42 18.16 5 17.5 5H6.5c-.66 0-1.22.42-1.42 1.01L3 12v8c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-1h12v1c0 .55.45 1 1 1h1c.55 0 1-.45 1-1v-8l-2.08-5.99zM6.5 16c-.83 0-1.5-.67-1.5-1.5S5.67 13 6.5 13s1.5.67 1.5 1.5S7.33 16 6.5 16zm11 0c-.83 0-1.5-.67-1.5-1.5s.67-1.5 1.5-1.5 1.5.67 1.5 1.5-.67 1.5-1.5 1.5zM5 11l1.5-4.5h11L19 11H5z"/>
</svg>`;

const workshopIcon = `
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 640 640"><path d="M541.4 162.6C549 155 561.7 156.9 565.5 166.9C572.3 184.6 576 203.9 576 224C576 312.4 504.4 384 416 384C398.5 384 381.6 381.2 365.8 376L178.9 562.9C150.8 591 105.2 591 77.1 562.9C49 534.8 49 489.2 77.1 461.1L264 274.2C258.8 258.4 256 241.6 256 224C256 135.6 327.6 64 416 64C436.1 64 455.4 67.7 473.1 74.5C483.1 78.3 484.9 91 477.4 98.6L388.7 187.3C385.7 190.3 384 194.4 384 198.6L384 240C384 248.8 391.2 256 400 256L441.4 256C445.6 256 449.7 254.3 452.7 251.3L541.4 162.6z"/></svg>`;

// Contenido de las tarjetas
const cardData = [
  {
    title: "Dueños de vehículos",
    description: "Agenda servicios automotrices online de manera rápida",
    icon: carIcon,
  },
  {
    title: "Talleres",
    description: "Gestiona citas, técnicos y recursos de manera eficiente",
    icon: workshopIcon,
  },
];
---

<section class="py-20 bg-light">
  <div class="container mx-auto px-4">
    <!-- Título de la sección -->
    <div class="text-center mb-16">
      <h2
        class="text-4xl md:text-5xl font-bold text-black mb-6"
      >
        Beneficios para todos
      </h2>
      <p
        class="text-lg md:text-xl text-gray-800 max-w-xl mx-auto leading-relaxed mt-10"
      >
        Una solución completa que beneficia tanto a dueños de vehículos como a
        talleres especializados
      </p>
    </div>

    <!-- Grid de tarjetas -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto my-20">
      {
        cardData.map((card) => (
          <HomeCard
            title={card.title}
            description={card.description}
            icon={card.icon}
          />
        ))
      }
    </div>
  </div>
</section>
