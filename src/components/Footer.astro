---
interface FooterSection {
  title: string;
  description: string;
}

interface NavigationLink {
  href: string;
  label: string;
}

interface ContactInfo {
  email: string;
  phone: string;
  instagram: string;
}

const footerContent: FooterSection = {
  title: "Digitaliza la atención y programación de este servicio",
  description:
    "Únete a la revolución digital del sector automotriz. Mejora y facilita tu experiencia al brindar o adquirir servicios de reparación o mantenimiento",
};

const companyInfo = {
  name: "AutoFix",
  description:
    "La plataforma que conecta dueños de vehículos con talleres especializados, facilitando la gestión de servicios automotrices de manera digital.",
};

const navigationLinks: NavigationLink[] = [
  { href: "/", label: "Inicio" },
  { href: "/features", label: "Características" },
  { href: "#contact", label: "Contacto" },
];

const contactInfo: ContactInfo = {
  email: "primefix@gmail.com",
  phone: "939413993",
  instagram: "prime-fix",
};

const currentYear = new Date().getFullYear();
---

<footer class="bg-primary text-white py-16" id="contact">
  <div class="container mx-auto px-6 max-w-7xl">
    <!-- Sección principal del footer -->
    <div class="text-center mb-20 flex flex-col items-center gap-7">
      <h2
        class="text-4xl md:text-4xl font-bold text-white max-w-xl mx-auto leading-tight mb-6"
      >
        {footerContent.title}
      </h2>

      <p
        class=" font-normal text-white/80 text-xl md:text-xl max-w-3xl mx-auto leading-relaxed"
      >
        {footerContent.description}
      </p>
    </div>

    <!-- Grid de información -->
    <div class="mb-16">
      <div class="grid grid-cols-1 md:grid-cols-3 gap-12 lg:gap-16">
        
        <!-- Información de la empresa -->
        <div class="flex flex-col items-center md:items-start text-center md:text-left ml-0 md:ml-20">
          <h3 class="text-2xl font-bold text-white mb-6">AutoFix</h3>
          <p class="text-white/80 text-base leading-relaxed">
            {companyInfo.description}
          </p>
        </div>

        <!-- Navegación -->
        <div class="flex flex-col items-center md:items-start text-center md:text-left ml-0 md:ml-30">
          <h4 class="text-xl font-semibold text-white mb-6">Navegación</h4>
          <nav class="w-full">
            <ul class="space-y-3 flex flex-col items-center md:items-start">
              {navigationLinks.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="text-white/80 hover:text-first-complementary transition-colors duration-300 text-base inline-block"
                  >
                    {link.label}
                  </a>
                </li>
              ))}
            </ul>
          </nav>
        </div>

        <!-- Contacto -->
        <div class="flex flex-col items-center md:items-start text-center md:text-left px-2 ml-0 md:ml-10">
          <h4 class="text-xl font-semibold text-white mb-6">Contacto</h4>
          <div class="space-y-4 w-full">
            
            <!-- Email -->
            <div class="flex items-center justify-center md:justify-start gap-3">
              <div class="flex-shrink-0">
                <svg
                  class="w-5 h-5 text-first-complementary"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
              </div>
              <a
                href={`mailto:${contactInfo.email}`}
                class="text-white/80 hover:text-first-complementary transition-colors duration-300 text-base underline"
              >
                {contactInfo.email}
              </a>
            </div>

            <!-- Teléfono -->
            <div class="flex items-center justify-center md:justify-start gap-3">
              <div class="flex-shrink-0">
                <svg
                  class="w-5 h-5 text-first-complementary"
                  fill="currentColor"
                  viewBox="0 0 20 20"
                >
                  <path d="M2 3a1 1 0 011-1h2.153a1 1 0 01.986.836l.74 4.435a1 1 0 01-.54 1.06l-1.548.773a11.037 11.037 0 006.105 6.105l.774-1.548a1 1 0 011.059-.54l4.435.74a1 1 0 01.836.986V17a1 1 0 01-1 1h-2C7.82 18 2 12.18 2 5V3z"></path>
                </svg>
              </div>
              <a
                href={`tel:+57${contactInfo.phone}`}
                class="text-white/80 hover:text-first-complementary transition-colors duration-300 text-base"
              >
                {contactInfo.phone}
              </a>
            </div>

            <!-- Instagram -->
            <div class="flex items-center justify-center md:justify-start gap-3">
              <div class="flex-shrink-0">
                <svg
                  class="w-5 h-5 text-first-complementary"
                  fill="currentColor"
                  viewBox="0 0 24 24"
                >
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"></path>
                </svg>
              </div>
              <a
                href={`https://instagram.com/${contactInfo.instagram}`}
                target="_blank"
                rel="noopener noreferrer"
                class="text-white/80 hover:text-first-complementary transition-colors duration-300 text-base"
              >
                {contactInfo.instagram}
              </a>
            </div>

          </div>
        </div>

      </div>
    </div>

    <!-- Línea divisoria y copyright -->
    <div class="border-t border-white/20 pt-8">
      <div class="text-center">
        <p class="text-white/70 text-sm md:text-base">
          © {currentYear} AutoFix. Todos los derechos reservados.
        </p>
      </div>
    </div>

  </div>
</footer>
