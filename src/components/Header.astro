---
import { getLangFromUrl, useTranslations } from "../i18n/utils";
import ChangeTheme from "./ChangeTheme.astro";
import SelectLang from "./SelectLang.astro";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface NavItem {
  href: string;
  label: string;
}

const navItems: NavItem[] = [
  { href: `/${lang}`, label: t('label-home') },
  { href: `/${lang}/features`, label: t('label-features') },
  { href: `#contact`, label: t('label-contact') },
];
---

<header class="fixed top-0 left-0 right-0 z-50 bg-primary shadow-lg">
    <div class="container mx-auto px-4">
        <nav class="flex items-center justify-between py-4">
            <!-- Logo -->
            <div class="flex items-center">
                <a href={`/${lang}`} class="flex items-center group">
                    <img 
                        class="bg-light rounded-lg transition-transform duration-300 group-hover:scale-105" 
                        src="/logo.svg" 
                        alt="Logo de AutoFix" 
                        width="50" 
                        height="40"
                    >
                    <span class="ml-3 font-bold text-2xl md:text-3xl text-white transition-colors duration-300 group-hover:text-first-complementary">
                        PrimeFix
                    </span>
                </a>
            </div>

            <!-- Navegación Desktop -->
            <div class="hidden md:flex items-center space-x-6">
                <ul class="flex items-center space-x-8">
                    {navItems.map((item) => (
                        <li>
                            <a 
                                href={item.href} 
                                class="text-white hover:text-first-complementary font-bold text-lg transition-colors duration-300 relative after:absolute after:bottom-0 after:left-0 after:w-0 after:h-0.5 after:bg-first-complementary after:transition-all after:duration-300 hover:after:w-full"
                            >
                                {item.label}
                            </a>
                        </li>
                    ))}
                </ul>
                
                <!-- Selector de idioma -->
                <SelectLang variant="dark" />
                <ChangeTheme variant="dark" />
                
                <!-- Botón de Probar Aplicativo Desktop -->
                <a href="https://frontend-dusky-rho-85.vercel.app">
                    <button class="bg-first-complementary text-white text-lg font-bold py-3 px-8 rounded-full hover:bg-white hover:text-first-complementary transform hover:scale-105 transition-all duration-300 shadow-lg hover:shadow-xl">
                        {t('buttonText')}
                    </button>
                </a>
            </div>

            <!-- Ícono hamburguesa Mobile -->
            <button 
                id="mobile-menu-button" 
                class="md:hidden text-white focus:outline-none p-2 rounded-lg hover:bg-white/10 transition-colors duration-300"
                aria-label="Abrir menú de navegación"
            >
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                </svg>
            </button>
        </nav>

        <!-- Navegación móvil -->
        <div id="mobile-menu" class="hidden md:hidden pb-4 border-t border-white/20">
            <ul class="space-y-2 pt-4">
                {navItems.map((item) => (
                    <li>
                        <a 
                            href={item.href} 
                            class="block text-white hover:text-first-complementary hover:bg-white/10 font-semibold text-lg py-3 px-4 rounded-lg transition-all duration-300"
                        >
                            {item.label}
                        </a>
                    </li>
                ))}
                <li class="px-4 py-2">
                    <div class="flex justify-center gap-4">
                        <SelectLang variant="dark" showLabel={true} />
                        <ChangeTheme variant="dark" showLabel={true} />
                    </div>
                </li>
                <li class="pt-4">
                    <a href='https://frontend-dusky-rho-85.vercel.app'>
                        <button class="w-full bg-first-complementary text-white text-lg font-bold py-3 px-8 rounded-full hover:bg-white hover:text-first-complementary transition-all duration-300 shadow-lg">
                            {t('buttonText')}
                        </button>
                    </a>
                </li>
            </ul>
        </div>
    </div>
</header>

<script>
    document.addEventListener('DOMContentLoaded', (): void => {
        const mobileMenuButton = document.getElementById('mobile-menu-button') as HTMLButtonElement | null;
        const mobileMenu = document.getElementById('mobile-menu') as HTMLDivElement | null;
        
        if (mobileMenuButton && mobileMenu) {
            mobileMenuButton.addEventListener('click', (): void => {
                const isHidden = mobileMenu.classList.contains('hidden');
                mobileMenu.classList.toggle('hidden');
                
                // Cambiar icono del botón hamburguesa
                const icon = mobileMenuButton.querySelector('svg');
                if (icon) {
                    if (isHidden) {
                        icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />';
                    } else {
                        icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />';
                    }
                }
            });
        }
    });
</script>